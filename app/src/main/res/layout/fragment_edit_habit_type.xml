<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmput301.t05.habilect.HabitTypeActivity$EditHabitFragment">

    <EditText
        android:id="@+id/editTextEditHabitTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/add_habit_title_hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextEditHabitTypeReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextEditHabitTypeTitle"
        android:layout_below="@+id/editTextEditHabitTypeTitle"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/add_habit_reason_hint"
        android:inputType="textPersonName" />

    <DatePicker
        android:id="@+id/datePickerEditHabitTypeStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:layout_below="@+id/editTextEditHabitTypeReason"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/checkBoxEditMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/datePickerEditHabitTypeStartDate"
        android:text="@string/monday" />

    <CheckBox
        android:id="@+id/checkBoxEditTuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkBoxEditMonday"
        android:layout_below="@+id/checkBoxEditMonday"
        android:text="@string/tuesday" />

    <CheckBox
        android:id="@+id/checkBoxEditWednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBoxEditTuesday"
        android:layout_toEndOf="@+id/checkBoxEditMonday"
        android:text="@string/wednesday" />

    <CheckBox
        android:id="@+id/checkBoxEditThursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePickerEditHabitTypeStartDate"
        android:layout_toEndOf="@+id/checkBoxEditWednesday"
        android:text="@string/thursday" />

    <CheckBox
        android:id="@+id/checkBoxEditFriday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBoxEditTuesday"
        android:layout_toEndOf="@+id/checkBoxEditMonday"
        android:text="@string/friday" />

    <CheckBox
        android:id="@+id/checkBoxEditSaturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxEditThursday"
        android:layout_toEndOf="@+id/checkBoxEditFriday"
        android:text="@string/saturday" />

    <CheckBox
        android:id="@+id/checkBoxEditSunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBoxEditTuesday"
        android:text="@string/sunday" />

    <Button
        android:id="@+id/buttonSaveHabitTypeEdits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBoxEditSunday"
        android:layout_alignParentEnd="true"
        android:text="@string/save" />
</RelativeLayout>
