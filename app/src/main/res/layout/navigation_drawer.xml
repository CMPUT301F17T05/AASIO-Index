<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:choiceMode="singleChoice"
    android:divider="@drawable/divider"
    android:dividerHeight="1dp"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:showDividers="middle|end">

        <Button
            android:id="@+id/navigateHabitTypes"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/social"
            android:paddingEnd="32dp"
            android:paddingStart="16dp"
            android:text="View Habit Types (Activity)" />

        <Button
            android:id="@+id/navigateSocial"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/social"
            android:paddingEnd="32dp"
            android:paddingStart="16dp"
            android:text="Social (Activity)" />

        <Button
            android:id="@+id/navigateProfile"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/profile"
            android:paddingEnd="32dp"
            android:paddingStart="16dp"
            android:text="Profile (Activity)" />

        <Button
            android:id="@+id/navigateHistory"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/history"
            android:paddingEnd="32dp"
            android:paddingStart="16dp"
            android:text="History (Activity)"
            android:theme="@style/AppTheme" />
    </LinearLayout>